<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Find a Ticket</h2>
    <%= form_with url: tickets_path, method: :get, local: true, id: "availability-form" do |form| %>
      <div class="form-check form-switch">
        <%= form.check_box :available_only, checked: params[:available_only] != "0", class: "form-check-input", onchange: "this.form.submit();" %>
        <%= form.label :available_only, "Show available tickets only", class: "form-check-label" %>
      </div>
    <% end %>

    <%= form_with url: tickets_path, method: :get, local: true, class: "row g-3 mb-4 align-items-end" do |form| %>
      <div class="col-md-4">
        <%= form.label :event_id, "Event" %>
        <%= form.collection_select :event_id, Event.all, :id, :name, { include_blank: "All Events" }, class: "form-select" %>
      </div>

      <div class="col-md-3">
        <%= form.label :category, "Category" %>
        <%= form.select :category, options_for_select(Event::CATEGORIES, selected: params[:category]), { include_blank: "All Categories" }, class: "form-select" %>
      </div>

      <div class="col-md-2">
        <%= form.submit "Apply Filters", class: "btn btn-primary w-100" %>
      </div>
    <% end %>


  </div>

  <div class="row">
    <% @tickets.each do |ticket| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <% if ticket.ticket_photo.attached? %>
            <%= image_tag ticket.ticket_photo, class: "card-img-top" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= ticket.event.name %></h5>
            <p class="card-text">$<%= ticket.price %></p>
            <%= link_to "View", ticket_path(ticket), class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
