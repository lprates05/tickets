<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Find a Ticket</h2>
    <%= form_with url: tickets_path, method: :get, local: true do |form| %>
      <div class="form-check form-switch">
        <%= form.check_box :available_only, checked: params[:available_only] != "0", class: "form-check-input" %>
        <%= form.label :available_only, "Show available tickets only", class: "form-check-label" %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <% @tickets.each do |ticket| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <% if ticket.ticket_photo.attached? %>
            <%= image_tag ticket.ticket_photo, class: "card-img-top" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= ticket.event.name %></h5>
            <p class="card-text">$<%= ticket.price %></p>
            <%= link_to "View", ticket_path(ticket), class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
