

<div class="card p-4 mb-4">
  <div class="d-flex justify-content-between align-items-start" style="gap: 2rem;">
    
    <!-- Left: Profile Photo + Info -->
    <div class="d-flex align-items-start" style="gap: 1.5rem;">
      <% if @user.profile_photo.attached? %>
        <%= image_tag @user.profile_photo.variant(resize_to_fill: [100, 100]), class: "rounded-circle", style: "object-fit: cover;" %>
      <% end %>

      <div>
        <h4 class="fw-bold mb-1"><%= @user.name %></h4>
        <p class="mb-1"><strong>Email:</strong> <%= @user.email %></p>
        <p class="mb-1"><strong>Class Year:</strong> <%= @user.class_year %></p>
        <p class="mb-0"><strong>Bio:</strong> <%= @user.bio %></p>
      </div>
    </div>

    <!-- Right: Edit Button -->
    <div>
      <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %>
    </div>

  </div>



    </div>

    
    <div class="row">
      <div class="col-md-6 mb-3">
        <h6 class="text-uppercase text-muted">My Listings</h6>
        <%= link_to "View Tickets I'm Selling", listings_user_path(current_user), class: "btn btn-outline-primary w-100" %>
      </div>
      <div class="col-md-6 mb-3">
        <h6 class="text-uppercase text-muted">My Purchases</h6>
        <%= link_to "View Tickets I've Bought", purchases_user_path(current_user), class: "btn btn-outline-primary w-100" %>
      </div>
    </div>
  </div>
</div>
</div>
