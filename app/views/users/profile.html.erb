<h1><%= @user.name %>'s Profile</h1>

<p><strong>Email:</strong> <%= @user.email %></p>
<p><strong>Bio:</strong> <%= @user.bio %></p>
<p><strong>Class Year:</strong> <%= @user.class_year %></p>
<% if @user.profile_photo.present? %>
  <p><img src="<%= @user.profile_photo %>" alt="Profile Photo" style="max-width: 200px; border-radius: 10px;"></p>
<% end %>

<hr>

<h2>Listed Tickets</h2>
<% if @listed_tickets.any? %>
  <% @listed_tickets.each do |ticket| %>
    <div style="border: 1px solid #ccc; padding: 1rem; margin-bottom: 1rem;">
      <p><strong>Event:</strong> <%= ticket.event.name %></p>
      <p><strong>Price:</strong> $<%= ticket.price %></p>
      <p><strong>Status:</strong> <%= ticket.status %></p>
    </div>
  <% end %>
<% else %>
  <p>No tickets listed.</p>
<% end %>

<hr>

<h2>Purchased Tickets</h2>
<% if @purchased_tickets.any? %>
  <% @purchased_tickets.each do |ticket| %>
    <div style="border: 1px solid #ccc; padding: 1rem; margin-bottom: 1rem;">
      <p><strong>Event:</strong> <%= ticket.event.name %></p>
      <p><strong>Price:</strong> $<%= ticket.price %></p>
    </div>
  <% end %>
<% else %>
  <p>No tickets purchased.</p>
<% end %>
