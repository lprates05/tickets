<h1>My Tickets</h1>

<% @tickets.each do |ticket| %>
  <div style="margin-bottom: 1rem; padding: 1rem; border: 1px solid #ccc; border-radius: 6px;">
    <p><strong>Event:</strong> <%= ticket.event.name %></p>
    <p><strong>Price:</strong> $<%= ticket.price %></p>

    <% if ticket.seller_id == current_user.id %>
      <%= link_to "Edit", edit_ticket_path(ticket), class: "btn btn-secondary" %>
      <%= link_to "Delete", ticket_path(ticket), method: :delete, data: { confirm: "Are you sure you want to delete this ticket? This action cannot be undone." }, class: "btn btn-danger" %>

    <% end %>

  </div>
<% end %>
