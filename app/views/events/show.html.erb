<h1><%= @event.name %></h1>

<div style="display: flex; gap: 2rem; margin-bottom: 2rem;">
      <%= image_tag url_for(@event.event_photo.variant(resize_to_limit: [300, 300])) %>
  
  <div>
    <p><strong>Category:</strong> <%= @event.category.capitalize %></p>
    <p><strong>Start:</strong> <%= @event.start_date %> at <%= @event.start_time.strftime('%I:%M %p') %></p>
    <p><strong>End:</strong> <%= @event.end_date %> at <%= @event.end_time.strftime('%I:%M %p') %></p>
    <p><strong>Timezone:</strong> <%= @event.timezone %></p>
  </div>
</div>

<% if @tickets.any? %>
  <h2>Available Tickets</h2>
  <ul style="list-style: none; padding-left: 0;">
    <% @tickets.each do |ticket| %>
      <li style="margin-bottom: 1rem; padding: 1rem; border: 1px solid #ccc; border-radius: 6px;">
        <p><strong>Price:</strong> $<%= ticket.price %></p>
        <%= link_to "View Ticket", ticket_path(ticket), class: "btn btn-primary" %>
      </li>

    <% end %>
  </ul>

  <% if current_user&.admin? %>
          <div class="d-flex justify-content-between">
            <%= link_to "Edit", edit_event_path(@event), class: "btn btn-sm btn-warning" %>
            <%= link_to "Delete", event_path(@event), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>

          </div>
        <% end %>
<% else %>
  <p>No tickets available for this event.</p>
<% end %>
